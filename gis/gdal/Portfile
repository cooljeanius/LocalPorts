variant extra_nonuniversal conflicts universal requires huge hdf4 lzma postgresql83 xerces description {Extra dependencies that aren't universal} {
    depends_lib-append      port:wgrib2 \
                            port:ocilib \
                            port:couchdb \
                            port:swig-php \
                            port:pear-Net_Curl \
                            port:mdbtools
    depends_skip_archcheck lzma postgresql83 wgrib2 ocilib couchdb mdbtools xercesc
    configure.args-append   --with-php \
                            --with-msg \
                            --with-oci
}
variant broken requires postgreql81 extra_nonuniversal poppler description {dependencies that don't even work even when not building universal} {
    depends_lib-append      port:pamtester \
                            port:svdlibc \
                            port:sam2p
    depends_skip_archcheck pamtester sam2p tif22pnm svdlibc
    configure.args-append   --with-pam
    if {[variant_isset xerces]} {
        depends_lib-append  port:xalanj
        depends_skip_archcheck xalanj
    }
}

default_variants            +expat \
                            +geos

# Postconfigure hack to avoid read ${include} .h files before
# GDAL own include directories
post-configure {
    set FRMT_PATH ${worksrcpath}/ogr/ogrsf_frmts
    foreach makefile [glob -dir $FRMT_PATH */GNUmakefile] {
        reinplace "s|\$\(EXPAT_INCLUDE\)||" $makefile
    }
}

post-destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
    xinstall -m 644 -W ${worksrcpath} HOWTO-RELEASE NEWS VERSION \
        ${destroot}${prefix}/share/doc/${name}
}

livecheck.type  regex
livecheck.url   http://download.osgeo.org/gdal/
livecheck.regex ${name}-(\\d+(?:\\.\\d+)*)\\.tar
