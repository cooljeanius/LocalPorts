                       i386-mingw32-libunicows nsis dbus-glib-sharp \
                       gecko-sharp2 mono-addins mono-basic netcat \
                       png2ico ttf2pt1 rtfreader i386-mingw32-gcc \
                       i386-mingw32-w32api
}

livecheck.type              regex
