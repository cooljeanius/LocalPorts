PortSystem          1.0

name                fox
version             1.6.49
revision            0
description         The FOX GUI toolkit
long_description    FOX is a C++ based Toolkit for developing Graphical \
                    User Interfaces easily and effectively.
maintainers         lylejohnson.name:lyle openmaintainer
categories          x11 devel
platforms           darwin
license             LGPL-2.1+

homepage            http://www.fox-toolkit.org/
master_sites        http://ftp.fox-toolkit.org/pub/
checksums           rmd160  fed992535878fc1c2018bad4f29792d16a1f8794 \
                    sha256  3679ecd23064958259fbef5898aabb048d63b2dcb796de1d8801fe0b51e5a90e

supported_archs     x86_64

depends_build-append \
	port:pkgconfig \
        path:bin/xmkmf:imake

depends_lib-append \
	port:tiff \
	port:libpng \
	port:jpeg \
	port:xorg-libXcursor \
	port:Xft2 \
	port:xorg-libXrandr \
	port:freetype \
	port:mesa \
        port:bzip2 \
        port:expat \
        port:fontconfig \
        port:libiconv \
        port:xorg-libX11 \
        port:xorg-libXau \
        port:xorg-libXdmcp \
        port:xorg-libXext \
        port:xorg-libXfixes \
        port:xorg-libXi \
        port:xorg-libxcb \
        port:xrender \
        port:zlib

configure.args-append \
        --with-x \
        --with-xft \
        --with-opengl \
        --enable-release \
        --with-xshm \
        --with-shape \
        --with-xcursor \
        --with-xrender \
        --with-xrandr \
        --with-xfixes \
        --with-xinput \
        --with-xim \
        --enable-jpeg \
        --enable-png \
        --enable-tiff \
        --enable-zlib \
        --enable-bz2lib
configure.cppflags-append -I${prefix}/include/freetype2
configure.env-append XMKMF=${prefix}/bin/xmkmf

variant debug description {Enables debugging} {
    configure.optflags -g
    configure.args-delete \
        --enable-release
    configure.args-append \
        --enable-debug \
        --with-profiling
}

livecheck.type      regex
livecheck.url       ${homepage}download.html
livecheck.regex     /${name}-(\[0-9.\]+)${extract.suffix}.*STABLE
