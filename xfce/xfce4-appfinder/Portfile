description     Software to find every application supporting Desktop \
                entry format
long_description ${description}
homepage        http://www.xfce.org/
master_sites    http://www.ca-us.xfce.org/archive/xfce-${version}/src/
use_bzip2       yes
checksums       md5     7752e43578b821e35010bcd3762da166 \
                sha1    2fa2534aa5a6b2fc24942689a0b7bb7cf327feda \
                rmd160  81dff99b910e3c2c10567341c7189614825ab657 \
                sha256  a1bf35b838922a7f81f588c727a6ef2f56b1bed0c46f7c36b209ac336f7e492a

depends_build-append \
                port:intltool \
                port:pkgconfig \
                port:xfce4-dev-tools

depends_lib-append \
                port:libxfcegui4 \
                port:libxfce4menu \
                port:Thunar \
                port:atk \
                port:bzip2 \
                port:dbus-glib \
                port:exo \
                port:fontconfig \
                port:freetype \
                port:gdk-pixbuf2 \
                port:gettext \
                port:gtk2 \
                port:libffi \
                port:libiconv \
                port:libpng \
                port:libxfce4util \
                port:xfconf \
                port:xorg-libX11 \
                port:xorg-libXau \
                port:xorg-libXcomposite \
                port:xorg-libXcursor \
                port:xorg-libXdamage \
                port:xorg-libXdmcp \
                port:xorg-libXext \
                port:xorg-libXfixes \
                port:xorg-libXi \
                port:xorg-libXinerama \
                port:xorg-libXrandr \
                port:xorg-libxcb \
                port:xrender \
                port:zlib \
                path:lib/pkgconfig/glib-2.0.pc:glib2 \
                path:lib/pkgconfig/cairo.pc:cairo \
                path:lib/pkgconfig/pango.pc:pango \
                path:lib/pkgconfig/dbus-1.pc:dbus

