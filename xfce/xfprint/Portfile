configure.args-append --enable-cups

configure.ldflags-append "-lXft -lfontconfig -lXrender -lXext -lXinerama -lXrandr"

post-activate {
    system -W ${prefix} "${prefix}/bin/gtk-update-icon-cache -f -t ${prefix}/share/icons/hicolor"
}
