# $Id: Portfile 96302 2012-08-07 07:00:13Z ryandesign@macports.org $

PortSystem          1.0

name                gmake
version             3.82
revision            1
categories          devel
license             GPL-3+
installs_libs       no
platforms           darwin
maintainers         nomaintainer
description         GNU Make
long_description \
    Make is a tool which controls the generation of executables and     \
    other non-source files of a program from the program's source files.\
    Make gets its knowledge of how to build your program from a file    \
    called the makefile, which lists each of the non-source files and   \
    how to compute it from other files. When you write a program, you   \
    should write a makefile for it, so that it is possible to use Make  \
    to build and install the program.

homepage            http://www.gnu.org/software/make/make.html
distname            make-${version}
master_sites        gnu:make
checksums           md5     1a11100f3c63fcf5753818e59d63088f \
                    sha1    b8a8a99e4cb636a213aad3816dda827a92b9bbed \
                    rmd160  e3d1f7019549553b9fc7a88884c9b85d25a60d21 \
                    sha256  e2c1a73f179c40c71e2fe8abf8a8a0688b8499538512984da4a76958d0402966

use_bzip2           yes

configure.args-append \
                    --program-prefix=g \
                    --infodir=${prefix}/share/info \
                    --mandir=${prefix}/share/man \
                    --with-libiconv-prefix=${prefix} \
                    --with-libintl-prefix=${prefix}

depends_lib-append  port:gettext \
                    port:libiconv

# Making a variant for this until ticket #38208 is resolved.
variant tests description {Build tests} {
    depends_build-append \
        bin:perl:perl5

    extract.asroot      yes

    configure.ccache    no
    platform macosx {
        # The HFS filesystem is case-insensitive by default, and I don't know how to check
        # if people have changed this, so assume case insensitivity on OS X to try to make
        # the tests pass
        configure.args-append \
            --enable-case-insensitive-file-system
    }

    use_parallel_build  no

    # the "default_names" test currently fails; I originally thought it was possibly due to
    # case-sensitivity or something, but telling the configure script that didn't seem to work...
    test.run            yes
    test.target         check
}

# This is mostly taken from the coreutils portfile
post-destroot {
    if {[file exists ${destroot}${prefix}/share/info/dir]} {
        delete ${destroot}${prefix}/share/info/dir
    }

    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} AUTHORS COPYING ChangeLog NEWS README \
        ${destroot}${docdir}

    xinstall -m 755 -d ${destroot}${prefix}/libexec/gnubin
    foreach binary [glob -tails -directory ${destroot}${prefix}/bin g*] {
        ln -s ${prefix}/bin/${binary} ${destroot}${prefix}/libexec/gnubin/[string range $binary 1 end]
        ln -s ${prefix}/bin/${binary} ${destroot}${prefix}/libexec/gnubin/gnu[string range $binary 1 end]
    }
    xinstall -m 755 -d ${destroot}${prefix}/libexec/gnubin/man/man1
    foreach manpage [glob -tails -directory ${destroot}${prefix}/share/man/man1 g*] {
        ln -s ${prefix}/share/man/man1/${manpage}.gz ${destroot}${prefix}/libexec/gnubin/man/man1/[string range $manpage 1 end].gz
        ln -s ${prefix}/share/man/man1/${manpage}.gz ${destroot}${prefix}/libexec/gnubin/man/man1/gnu[string range $manpage 1 end].gz
    }
}
