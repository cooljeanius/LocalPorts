# $Id$

PortSystem        1.0
PortGroup         active_variants 1.1

name              PureDarwin
version           0.1
categories        sysutils
platforms         darwin
maintainers       gwmail.gwu.edu:egall openmaintainer
license           Permissive
supported_archs   noarch

description       An attempt at building a self-hosting Darwin using MacPorts

long_description  ${description}.

use_configure     no

build {}

depends_lib-append port:darwinbuild \
                   port:kernel-tools-slim \
                   port:quartz-wm \
                   port:apple-gcc40 \
                   port:apple-gcc42 \
                   port:bootstrap_cmds \
                   port:csu \
                   port:gdb-apple \
                   port:libc-headers \
                   port:libm-headers \
                   port:llvm-gcc42 \
                   port:tcp_wrappers \
                   port:MacPorts \
                   port:chroot-tools \
                   port:proctools

require_active_variants MacPorts only_mp_deps
require_active_variants MacPorts mp_bundle

