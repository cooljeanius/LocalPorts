    configure.args-append \
                --disable-silent-rules \
                --enable-gtk-doc
    if {[variant_isset quartz]} {
        depends_lib-append \
                 port:xorg-libXmu \
                 port:xpm
        configure.args-append \
                 --enable-gtk-doc-app
        platform darwin > 11 {
            depends_lib-append port:curlhandle
        }
    } else {
        depends_lib-append \
                 port:xorg-libX11 \
                 port:xorg-libXau \
                 port:xorg-libXcomposite \
                 port:xorg-libXcursor \
                 port:xorg-libXdamage \
