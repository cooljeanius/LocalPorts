    if {[variant_isset python26]} {
        depends_lib-append \
                 port:py26-fpconst \
                 port:py26-cairosvg \
                 port:py26-exif \
                 port:py26-curl \
                 port:py26-curlish \
                 port:dbus-python26 \
                 port:py26-pygtksourceview \
                 port:py26-gtkhtml2
        if {[variant_isset help_browser]} {
            depends_lib-append \
                 port:py26-webkitgtk
        }
    }
    if {[variant_isset python27]} {
        depends_lib-append \
                 port:py27-fpconst \
                 port:py27-cairosvg \
                 port:py27-curl \
                 port:py27-curlish \
                 port:dbus-python27 \
                 port:py27-pygtksourceview \
                 port:py27-gtkhtml2
        if {[variant_isset help_browser]} {
            depends_lib-append \
                 port:py27-webkitgtk
        }
    }
    if {[variant_isset help_browser]} {
        depends_build-append \
                 port:html \
                 port:xhtml1
        depends_lib-append \
                 port:libgtkhtml3
        depends_run-append \
                 port:html \
                 port:xhtml1
    }
    configure.cppflags-delete -Wunknown-warning-option \
                              -Wformat-non-literal \
                              -Werror=missing-prototypes
    configure.cppflags-append -Wno-unknown-warning-option \
                              -Wformat-nonliteral
    use_parallel_build no
}

post-activate {
    system "${prefix}/bin/gtk-update-icon-cache -f -t ${prefix}/share/icons/hicolor"
    system "${prefix}/bin/update-desktop-database ${prefix}/share/applications"
}

livecheck.type  regex
livecheck.url   ftp://ftp.gtk.org/pub/gimp/v${branch}/
livecheck.regex "gimp-(${branch}(?:\\.\\d+)*)${extract.suffix}"
